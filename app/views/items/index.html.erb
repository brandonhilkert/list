<%= form_for(@item) do |f| %>
  <%= f.text_field :description %>
  <%= f.submit "Add", class: "button" %>
<% end %>

<div class="list">
  <% if !@items.empty? %>
      <ul class="items">
        <% @items.each do |item| %>
          <li>
            <%= item.description %>
            <%= link_to "Delete", item_path(item), method: :delete, class: "button destroy" %>
          </li>
        <% end %>
      </ul>

    <%= link_to "Clear All", clear_items_path, method: :delete, class: "button destroy-all" %>

  <% else %>
    <div class="no-data">
      No items found
    </div>
  <% end %>
</div>